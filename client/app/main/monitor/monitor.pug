doctype html

#monitor.page-layout.simple.left-sidenav(layout='row')
    // SIDENAV
    md-sidenav.sidenav(
        md-is-locked-open="$mdMedia('gt-md')"
        md-component-id='sidenav'
        ms-scroll
        ms-sidenav-helper
    )
        include ./sidenav/sidenav.pug

    // CENTER
    .center(flex, ms-scroll)
        // HEADER
        .header.md-accent-bg(layout='row')
            md-button.md-icon-button.sidenav-toggle(
                hide-gt-md
                ng-click="vm.toggleSidenav('sidenav')"
                aria-label='Toggle sidenav'
            )
                md-icon.icon(md-font-icon='icon-menu')
            div
                span.h2 {{vm.$state.params.channel}}

        .content.md-background-bg(ui-view="module")

